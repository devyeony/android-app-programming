<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!--
        위의 레이아웃에서 android:orientation을 horizontal로 설정하고
        아래의 텍스트 뷰들의 layout_height의 속성은 match_parent로, layout_width 속성은 0dp로
        설정하면 가로 방향으로 1:2:3의 비율로 차일드 뷰들이 레이아웃 영역을 할당받게 됨
    -->

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Top Text!!(1)"
        android:textSize="10pt"
        android:gravity="center"
        android:background="#FFE400"
        android:layout_weight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="center Text!!(2)"
        android:textSize="10pt"
        android:gravity="center"
        android:background="#CEF279"
        android:layout_weight="2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Bottom Text!!(3)"
        android:textSize="10pt"
        android:gravity="center"
        android:background="#5CD1E5"
        android:layout_weight="3" />

</LinearLayout>